    + setName(): void
    + setTicketType(): void
    + setDestination(): void
    + calculateTicketCost(RailwayStation: currentStation,\n RailwayStation: destination): float

}

class RailwayStation {
    - coordinates[]: float
    - district: boolean
    - available: boolean
    -
}

class Printer {
    - ticketToPrint: Ticket

    +setTicketToPrint(Ticket: ticket): void
    +printTicket(): boolean
}

